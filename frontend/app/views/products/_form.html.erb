<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger mb-4">
      <h5><i class="fas fa-exclamation-triangle me-2"></i> <%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h5>
      <ul class="mb-0 mt-2">
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", required: true %>
        <div class="form-text">Enter the full product name including brand</div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :size, class: "form-label" %>
        <%= form.text_field :size, class: "form-control", required: true %>
        <div class="form-text">Example: 225/45R17</div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, rows: 3, class: "form-control" %>
        <div class="form-text">Provide detailed information about the tire</div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :category, class: "form-label" %>
        <%= form.select :category, 
          options_for_select([
            ["Race Tires", "race"],
            ["Street Tires", "street"],
            ["All-Season", "all_season"]
          ], product.category),
          {}, { class: "form-select", required: true }
        %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :availability, class: "form-label" %>
        <%= form.select :availability, 
          options_for_select([
            ["In Stock", "in_stock"],
            ["Low Stock", "low_stock"],
            ["Out of Stock", "out_of_stock"],
            ["Discontinued", "discontinued"]
          ], product.availability),
          {}, { class: "form-select", required: true }
        %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :points_required, "Points Required", class: "form-label" %>
        <div class="input-group">
          <%= form.number_field :points_required, min: 0, step: 1, class: "form-control", required: true %>
          <span class="input-group-text">points</span>
        </div>
        <div class="form-text">Typically 4 points per tire</div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :cash_price, "Cash Price ($)", class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <%= form.number_field :cash_price, min: 0, step: 0.01, class: "form-control", required: true %>
        </div>
        <div class="form-text">Price in USD for cash purchases</div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="mb-3">
        <%= form.label :stock_level, "Current Stock Level", class: "form-label" %>
        <%= form.number_field :stock_level, min: 0, class: "form-control", required: true %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="mb-3">
        <%= form.label :low_stock_threshold, "Low Stock Threshold", class: "form-label" %>
        <%= form.number_field :low_stock_threshold, min: 1, class: "form-control", required: true %>
        <div class="form-text">Alert when stock falls below this level</div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="mb-3">
        <%= form.label :max_stock, "Maximum Stock Capacity", class: "form-label" %>
        <%= form.number_field :max_stock, min: 1, class: "form-control", required: true %>
        <div class="form-text">Used for stock level visualization</div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="mb-3">
        <%= form.label :notes, "Internal Notes", class: "form-label" %>
        <%= form.text_area :notes, rows: 2, class: "form-control" %>
        <div class="form-text">Optional notes visible only to admins</div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-check form-switch mb-3">
        <%= form.check_box :active, class: "form-check-input", role: "switch" %>
        <%= form.label :active, "Product is active and available for requests", class: "form-check-label" %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to "Cancel", products_path, class: "btn btn-outline-secondary" %>
        <%= form.submit product.new_record? ? "Create Product" : "Update Product", class: "btn btn-primary ms-md-2" %>
      </div>
    </div>
  </div>
<% end %>
