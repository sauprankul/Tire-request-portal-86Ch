<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-md-8">
      <h2>Edit Product</h2>
      <p class="text-muted">Update tire product information</p>
    </div>
    <div class="col-md-4 text-end">
      <%= link_to product_path(@product), class: "btn btn-outline-primary me-2" do %>
        <i class="fas fa-eye"></i> View Product
      <% end %>
      <%= link_to products_path, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-arrow-left"></i> Back to Products
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= render 'form', product: @product %>
        </div>
      </div>
    </div>
  </div>
</div>
